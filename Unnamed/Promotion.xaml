<Controls:MetroWindow
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Unnamed.Promotion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unnamed"
        mc:Ignorable="d"
        Title="Promotion" Background="#0F0F0F" Height="175" Width="300" IsMinButtonEnabled="False" IsMaxRestoreButtonEnabled="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Foreground="Lime" FontSize="20" Content="EXP RECEIVED:" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <Controls:NumericUpDown Name="expText" Minimum="0" Grid.Row="1" Foreground="Lime" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
        </Controls:NumericUpDown>
        <Button Name="Button" Click="Button_Click"  Grid.Row="4" Margin="1,1,1,1" BorderBrush="Lime" FontSize="16" Foreground="Lime" Background="Black">APPLY</Button>
    </Grid>
</Controls:MetroWindow>
